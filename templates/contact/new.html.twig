{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <!-- ======= Contact Section ======= -->
    <section id="contact"><br><br>
        <div class="container mt-5">
            <div class="section-header">
                <h3 class="section-title">NOUS CONTACTER</h3>
                <p class="section-description">La délegation régionale de tourisme de tataouine est toujours à votre service</p>
            </div>
        </div>
        {% if is_granted('ROLE_USER') %}
            <div> <a href="{{ path('contact_index') }}" class="btn btn-primary mt-3 mb-3">Liste des messages</a></div>
        {% endif %}
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2815.9276644162132!2d10.452975087679471!3d32.93196319782774!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1254b7596be92873%3A0xd94cf811d4ad762d!2sTataouine!5e0!3m2!1sfr!2stn!4v1595174443667!5m2!1sfr!2stn"
                width="100%" height="400" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0" class="mb-5"></iframe>
        <!-- Uncomment below if you wan to use dynamic maps -->
        <div class="container mb-5">
            <div class="row">
                <div class="col-md-4">
                    <div class="info">
                        <div>
                            <i class="fa fa-map-marker"></i>
                            <p>AV 18 JANVIER<br>TATAOUINE, 3200</p>
                        </div>
                        <div>
                            <i class="fa fa-envelope"></i>
                            <p>crt.tataouine@discovertunisia.com</p>
                        </div>
                        <div>
                            <i class="fa fa-phone"></i>
                            <p>+216 75 862 674  </p>
                        </div>
                    </div>
                    <div class="social-links">
                        <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>
                        <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                    </div>
                </div>
                <div class="col-md-8">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-primary">{{ button_label|default('Envoyer votre message') }}</button>
                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </section><!-- End Contact Section -->

{% endblock %}
