{% extends 'base.html.twig' %}

{% block title %}Projects{% endblock %}

{% block body %}
    <h1>Projects</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Nom_projet</th>
                <td>{{ project.nomProjet }}</td>
            </tr>
            <tr>
                <th>Lieu</th>
                <td>{{ project.lieu }}</td>
            </tr>
            <tr>
                <th>Proprietaire</th>
                <td>{{ project.proprietaire }}</td>
            </tr>
            <tr>
                <th>Date_de_creation</th>
                <td>{{ project.dateDeCreation ? project.dateDeCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
